 <script>
 let currentQuestion = 1;
 let questionHistory = [];

 function nextQuestion(questionNumber, progress) {
 document.getElementById('q' + currentQuestion).classList.remove('active');
 questionHistory.push(currentQuestion);
 currentQuestion = questionNumber;
 document.getElementById('q' + questionNumber).classList.add('active');
 updateProgress(progress);
 document.getElementById('backBtn').style.display = 'block';
 }

 function showResult(resultId, progress) {
 document.getElementById('q' + currentQuestion).classList.remove('active');
 document.getElementById(resultId).classList.add('active');
 updateProgress(progress);
 document.getElementById('backBtn').style.display = 'none';
 }

 function updateProgress(percentage) {
 document.getElementById('progressFill').style.width = percentage + '%';
 }

 function goBack() {
 if (questionHistory.length > 0) {
 document.getElementById('q' + currentQuestion).classList.remove('active');
 currentQuestion = questionHistory.pop();
 document.getElementById('q' + currentQuestion).classList.add('active');
 updateProgress((questionHistory.length) * 25);
 if (questionHistory.length === 0) {
 document.getElementById('backBtn').style.display = 'none';
 }
 }
 }

 function restart() {
 const results = document.querySelectorAll('.result-card');
 results.forEach(result => result.classList.remove('active'));
 currentQuestion = 1;
 questionHistory = [];
 document.getElementById('q1').classList.add('active');
 updateProgress(0);
 document.getElementById('backBtn').style.display = 'none';
 }
 </script>
